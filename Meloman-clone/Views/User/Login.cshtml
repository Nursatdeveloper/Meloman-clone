    .message {
        position: absolute;
        top: 100px;
    }

    .message-header {
        width: 15px;
        height: 15px;
        background-color: green;
        border-radius: 3px;
    }
    .login-wrapper{
        display:block;
        margin-left:auto;
        margin-right:auto;
        margin-top:50px;
        width:400px;
        height:500px;
    }
    .alert-message {
        margin-left: 30px;
        margin-right: 30px;
        height: 30px;
        display: flex;
        align-items: center;
    }

    .header {
        padding-right: 15px;
        padding-left: 15px;
        cursor: pointer;
    }

    .header-chosen {
        border-bottom: 2px solid #0100d3;
        font-weight: bold;
    }

    .auth-modal-header {
        display: flex;
        justify-content: space-between;
        margin-left: 80px;
        color: #0000b3;
        margin-bottom: 20px;
        margin-top: 10px;
        margin-right: 10px;
    }

    .modal-content {
        width: 400px;
    }

    .label-group {
        font-size: 14px;
    }

    .credentials {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 5px;
        width: 190px;
        color: #4d4d4d;
        font-family: 'Proxima','Helvetica Neue',Helvetica,Arial,sans-serif;
    }

    .button-container {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 30px;
    }

        .button-container button {
            width: 170px;
            background-color: #0100d3;
            color: white;
            border: 0;
            border-radius: 5px;
        }

            .button-container button:hover {
                background-color: #0000b3;
            }
</style>